pipeline {
    agent any
    
    environment {
        EMAIL_TO = credentials('email-to')
    }
    
    stages {
        stage('Test') {
            steps {
                sh 'docker build -t minha-app ./app'
                sh 'docker run --rm minha-app'
            }
            post {
                always {
                    publishHTML(target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Relat√≥rio de Cobertura'
                    ])
                }
            }
        }
        
        stage('Build') {
            steps {
                sh 'docker build -t minha-app ./app'
            }
        }
        
        stage('Notify') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'smtp-password', variable: 'EMAIL_PASSWORD')]) {
                        sh """
                        docker run --rm \
                            -e EMAIL_TO=${EMAIL_TO} \
                            -e EMAIL_FROM=seu-email@gmail.com \
                            -e EMAIL_PASSWORD=${EMAIL_PASSWORD} \
                            -v ${WORKSPACE}/scripts:/scripts \
                            python:3.9-slim \
                            python /scripts/notify.py
                        """
                    }
                }
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: '**/*.py', fingerprint: true
        }
    }
}